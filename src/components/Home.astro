---
import { geti18n } from "../i18n";
let { currentLocale } = Astro;
const i18n = geti18n({ currentLocale });
---

<section id="home" class="flex__center">
  <div class="info__container">
    <span class="name">{i18n.HOME.NAME}</span>
    <div>
      <h1 class="title">{i18n.HOME.DEGREE}</h1>
      <p class="description">
        {i18n.HOME.DESCRIPTION}
      </p>
    </div>
    <div class="link__container">
      <a href="/MonicaAngulo-CV.pdf" target="_blank">
        <button class="cv__button"> {i18n.HOME.BUTTON_CV} </button>
      </a>
      <a href="https://github.com/Moniicangulo" target="_blank" class="link__github">{i18n.HOME.LINK_TO_GITHUB}</a>
    </div>
  </div>
  <figure class="img__container">
    <img src="./images/home-image.png" alt="dev_focus" />
  </figure>
</section>

<style>
  #home {
    margin-top: 5rem;
    display: flex;
    gap: 8rem;
    justify-content: center;
    background-color: var(--white);
    width: 100%;
    height: 90vh;
  }
  .info__container {
    color: var(--black);
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 0rem 3rem;
    text-align: left;
    width: 40%;
    max-width: 500px;

    & .name {
      font-size: 2.5rem;
      font-weight: 500;
    }
    & .title {
      font-size: 1.75rem;
      font-weight: 400;
      margin-bottom: 0.5rem;
    }
    & .description {
      font-weight: 300;
    }
  }
  .img__container {
    object-fit: cover;
    width: 40%;
    max-width: 500px;
    & img {
      width: 100%;
      height: auto;
    }
  }

  .link__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    transition: all 0.5s ease-in-out;

    & .link__github{
      font-weight: 300;
      color: var(--black);
    }
  }
  .cv__button {
    background-color: var(--green);
    border: none;
    border-radius: 1rem;
    color: var(--white);
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    outline: none;
    text-transform: uppercase;
    min-width: 130px;

    transition: all 0.5s ease-in-out;
    &:hover {
      cursor: pointer;
      opacity: 0.9;
    }
  }
  @media (max-width: 769px) {
  #home{
    gap: 1rem;
  }
  .info__container{
    width: 60%;
  }
  .img__container {
    max-width: 300px;
  }
  {}

  @media (max-width: 426px) {
    #home {
      flex-direction: column;
    }
    .info__container {
      width: 85%;
    }
  }
</style>
