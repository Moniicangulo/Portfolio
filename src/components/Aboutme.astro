---
import { geti18n } from "../i18n";
let { currentLocale } = Astro;
const i18n = geti18n({ currentLocale });
const { TITLE, SUBTITLE, DESCRIPTTION } = i18n.ABOUT_ME;
---

<section id="aboutme" class="container__aboutme">
  <h2>{TITLE}</h2>
  <span>{SUBTITLE}</span>
  <p>
    {DESCRIPTTION}
  </p>
</section>

<style>
  .container__aboutme {
    background-color: var(--pink);
    border-radius: 1.5rem;
    color: var(--black);
    display: flex;
    font-size: 1.25rem;
    flex-direction: column;
    gap: 1.25rem;
    height: 650px;
    justify-content: center;
    padding: 2.5rem;
    text-align: start;
    width: 50%;
    & h2 {
      color: var(--white);
      font-family: "Concert One", sans-serif;
      font-size: 3rem;
      font-weight: 400;
      text-transform: uppercase;
    }
    & span {
      font-size: 2rem;
    }
  }
  @media (max-width: 426px) {
    .container {
      flex-direction: column-reverse;
      gap: 1rem;
      width: 85%;
    }
    .info__container {
      width: 85%;
    }
    .img__container {
      width: 65%;
    }
  }
</style>
