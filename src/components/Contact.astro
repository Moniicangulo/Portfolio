---
import { geti18n } from "../i18n";
let { currentLocale } = Astro;
const i18n = geti18n({ currentLocale });

---

<section id="contact" class="contact__container">
  <div class="subtitle__container">
    <h2>{i18n.CONTACT_ME.TITLE}</h2>
  </div>
  <div class="contact">
    <span class="name">{i18n.CONTACT_ME.NAME}</span>
    <div class="square__rose">
      <span>{i18n.CONTACT_ME.DEGREE}</span>
      <span>{i18n.CONTACT_ME.PROFILE}</span>
    </div>
    <div class="square__green">
      <pre
        class="code">
          <img src="./images/logo-cat.svg" alt="cat" />

          @mixin buttons(&#36;color, &#36;width) &#123;
            color: &#36;white;
            background-color: &#36;color;
            width: &#36;width;
            height: 45px;
            box-shadow: 0px 8px 4px lighten(&#36;color, 50%);
            border: none;
            bottom: 3px solid darken(&#36;color, 10%);
            border-radius: 30px;
        
            &#38;:hover &#123;
              cursor: pointer;
              opacity: 80%;
            &#125;
          &#125;
        </pre>
    </div>
    <div class="contact__links">
      <a href="mailto:angulosmonica@gmail.com">
        <p>angulosmonica@gmail.com</p>
      </a>
      <a href="https://www.linkedin.com/in/monica-angulo-sanchez-ab9a3a2a9/">
        <p>{i18n.CONTACT_ME.LINKEDIN}</p>
      </a>
    </div>
  </div>

  <footer>
    <p class="project__details">
      {i18n.FOOTER.FOOTER}
    </p>
  </footer>
</section>

<style>
  .contact__container {
    width: 100vw;
    background-color: var(--light-purple);
    display: flex;
    flex-direction: column;
    align-items: center;
    display: flex;
    padding: 4rem 0px 2rem;
    gap: 4rem;
  }
  .contact {
    background-color: var(--white);
    border: 1px solid var(--black);
    width: 580px;
    height: 300px;
    position: relative;
  }
  .subtitle__container {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    & h2 {
      font-family: "Concert One", sans-serif;
      color: var(--black);
      text-transform: uppercase;
    }
  }

  .name {
    position: absolute;
    top: 28px;
    left: 20px;
    color: var(--black);
    font-family: "Concert One", sans-serif;
    font-size: 2rem;
    line-height: 38px;
    letter-spacing: 0.2px;
  }
  .square__rose {
    display: flex;
    flex-direction: column;
    font-size: 0.75rem;
    font-weight: 500;
    align-items: flex-start;
    padding: 1.5rem;
    gap: 0.5rem;

    background-color: var(--bg-square-rose);
    position: absolute;
    width: 220px;
    height: 198px;
    left: 20px;
    top: 82px;
  }

  .square__green {
    position: absolute;
    width: 300px;
    height: 140px;
    left: 260px;
    top: 20px;
    background-color: var(--bg-square-green);
  }
  .code {
    position: relative;
    font-size: 8px;
    line-height: 9px;
    letter-spacing: 0.2px;
    color: var(--light-green);
    img {
      position: absolute;
      left: 58.96%;
      right: 5.33%;
      top: 12.14%;
      bottom: 27.14%;

      transform: rotate(12.82deg);
      width: 107px;
    }
  }
  .contact__links {
    background-color: var(--white);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 20px 16px;
    gap: 12px;

    position: absolute;
    width: 440px;
    height: 100px;
    left: 120px;
    top: 180px;

    a {
      color: var(--black);
      font-family: "Ubuntu";
      font-size: 1.5rem;
      line-height: 1.65rem;
      letter-spacing: 0.2px;
    }
  }

  .project__details {
    max-width: 600px;
    color: var(--txt-footer);
    text-align: center;
  }
</style>
