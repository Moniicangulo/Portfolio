<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-direction: column;
    gap: 4rem;
    margin-bottom: 1rem;
    width: 100vw;
    background-color: var(--light-purple);
    padding: 4rem 0rem 2rem 0rem;

    & h2{
      font-family: "Concert One", sans-serif;
      font-weight: 400;
      font-size: 3rem;
      text-transform: uppercase;
      color: var(--black);
    }
  }

  .square-pink{

  }
  .contact__container{
    
   
  }

  .contact {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-width: 2px;
    border-style: solid;
    border-image: var(--gradient) 1;
    padding: 1rem;
    width: 50%;

    & > div {
      display: flex;
      align-items: start;
      flex-direction: column;
      gap: 1rem;
      width: 60%;
    }
    & a {
      display: flex;
      gap: 0.5rem;
      &:hover {
        opacity: 0.8;
      }
    }
    & figure {
      width: 30%;
      object-fit: contain;
      & img {
        width: 100%;
      }
    }
  }
  .project__details{
    opacity: 0.5;
  }
  @media (max-width: 769px) {
    .contact{
      width: 70%;
    }
  }
  @media (max-width: 426px) {
    .contact__container {
      width: 100%;
      & figure {
        display: none;
      }
    }
    .contact{
      width: 100%;
    }
  }
</style>
