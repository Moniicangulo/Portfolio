---
import { geti18n } from "../i18n";
let { currentLocale } = Astro;
const i18n = geti18n({ currentLocale });
const { TECHNOLOGIES_TITLE } = i18n.EXPERIENCE;
interface Props {
  job: string;
  company: string;
  date: string;
  description: string;
  technologies: string[];
}
const { job, company, date, description, technologies } = Astro.props;
---

<article class="card__job">
  <div class="info__job">
    <div class="info__job__header">
      <h3>{job}</h3>
      <p>{company}</p>
    </div>

    <span class="date">{date}</span>
    <p class="description">
      {description}
    </p>
  </div>

  <div class="technologies">
    <h4 class="title">{TECHNOLOGIES_TITLE}</h4>
    <div class="container__tech">
      {technologies.map((tech) => <span class="tech">{tech}</span>)}
    </div>
  </div>
</article>

<style>
  .card__job {
    display: flex;
    width: 800px;
    height: 400px;
    background-color: var(--light-green);

    &:hover {
      box-shadow: -4px -4px 8px rgba(91, 160, 146, 0.5), 4px 4px 8px rgba(91, 160, 146, 0.5);
      margin-bottom: 0.5rem;
      & .technologies {
        display: flex;
        transform: translateX(0);
        opacity: 1;
      }
    }
    .info__job {
      border-right: 2px solid var(--dark-green);
      display: flex;
      flex-direction: column;
      gap: 1rem;
      height: 100%;
      justify-content: center;
      padding: 2.5rem;
      width: 50%;
    }

    & .date {
      color: var(--gray);
    }

    & .description {
      color: var(--dark-green);
    }
  }
  .info__job__header {
    color: var(--white);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    & h3 {
      font-size: 1.5rem;
    }
  }
  .technologies {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    justify-content: center;
    padding: 2.5rem;
    width: 50%;

    transform: translateX(-100%);
    opacity: 0;
    transition:
      transform 0.8s ease,
      opacity 0.3s ease;
    & .title {
      color: var(--dark-green);
      font-weight: 500;
      font-size: 1.5rem;
    }
  }
  .container__tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    & .tech {
      display: flex;
      padding: 0.25rem 0.75rem;
      background-color: var(--tech-green);
    }
  }
</style>
