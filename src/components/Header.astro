<header class="header">
  <div class="flex__center">
    <figure>
      <img src="./images/logo-cat.svg" alt="cat" />
    </figure>
    <span>Moniicangulo</span>
  </div>
  <nav class="flex__center">
    <a href="#home">Home</a>
    <a href="#projects">Project</a>
    <a href="#experience">Experience</a>
    <a href="#aboutme">About me</a>
    <a href="#skills">Skills</a>
    <a href="#contact">Contact me</a>
  </nav>
</header>

<style>
  .header {
    align-items: center;
    color: var(--black);
    display: flex;
    background-color: var(--white);
    justify-content: space-between;
    padding: 1rem var(--padding-desktop);
    width: 100vw;
    position: fixed;
    top: 0;

    & figure {
      width: 50px;
      object-fit: contain;
      & img {
        width: 100%;
      }
    }
    & nav {
      gap: 2rem;
    }

    & a {
      color: var(--black);
      transition: all 0.3s ease-in;
      outline: none;
      border-bottom: 1px transparent;
      &:hover {
        color: var(--mauve);
        border-bottom: 1px solid var(--mauve);
      }
    }
  }

  @media (max-width: 768px) {
    .header {
      & nav {
        gap: 1rem;
      }
    }
  }
  @media (max-width: 426px) {
    .header {
      justify-content: center;
      & >div{
      }
      
      & nav {
        display: none;
      }
    }
  }
</style>
