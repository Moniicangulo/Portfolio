---
const { link, img, title, description } = Astro.props;
---

<article class="card">
  <a href={link} target="_blank">
    <figure>
      <img src={img} alt={title} />
    </figure>
    <h2>{title}</h2>
    <p>{description}</p>
  </a>
</article>

<style>
  .card {
    border-radius: 1.25rem;
    padding: 1rem;
    width: fit-content;
    max-width: 450px;

    & a {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    & h2 {
      color: var(--indigo);
    }
    & figure {
      width: 100%;
      width: 100%;
      height: 250px;
      overflow: hidden;

      & img {
        object-fit: cover;
        height: 100%;
        border-radius: 0.75rem;
        width: 100%;
      }
    }
    & p {
      color: var(--dark--slate-gray);
    }
    transition: all 0.3s linear;
    &:hover {
      background-color: var(--light-steel-blue);
      cursor: pointer;
    }
  }

  @media max-width(426px) {
    .card {
      max-width: 85%;
    }
  }
</style>
